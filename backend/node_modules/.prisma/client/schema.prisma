// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  googleId  String? // Armazena o ID do Google OAuth
  email     String   @unique
  password  String? // O password será opcional, já que o Google OAuth não usa senha
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
